# Exemplo de configuração de ambiente para o frontend Next.js
# Renomeie para .env e ajuste os valores conforme seu ambiente

# URL base da API (backend)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# URL base do WebSocket (se aplicável)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Conexão com o backend
NEXT_PUBLIC_JWT_STORAGE_KEY=synapse_auth_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=synapse_refresh_token

# Ambiente da aplicação (development, staging, production)
NEXT_PUBLIC_APP_ENV=development

# Nome da aplicação (opcional, para exibir no UI)
NEXT_PUBLIC_APP_NAME=SynapScale

# Descrição da aplicação (opcional)
NEXT_PUBLIC_APP_DESCRIPTION=Plataforma de Automação com IA

# Nome da empresa (opcional)
NEXT_PUBLIC_COMPANY_NAME=João Castanheira

# Ativar/desativar analytics (opcional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Ativar/desativar marketplace (opcional)
NEXT_PUBLIC_ENABLE_MARKETPLACE=true

# Ativar/desativar upload de arquivos (opcional)
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Ativar/desativar workspaces (opcional)
NEXT_PUBLIC_ENABLE_WORKSPACES=true

# Tamanho máximo de upload de arquivo (em bytes, opcional)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Tipos de arquivos permitidos para upload (JSON array, opcional)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=["image/*","application/pdf","text/*"]

# Tempo de cache em milissegundos (opcional)
NEXT_PUBLIC_CACHE_TIMEOUT=300000

# Configurações de WebSocket (opcional)
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=2000

# Mostrar informações de debug no frontend (opcional)
NEXT_PUBLIC_SHOW_DEBUG_INFO=false

# Ativar React Query Devtools (opcional)
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=false 