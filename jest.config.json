{
  "name": "jest",
  "version": "1.0.0",
  "description": "Configuração de testes para o projeto",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/frontend/$1"
    },
    "collectCoverageFrom": [
      "frontend/**/*.{ts,tsx}",
      "!frontend/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 70,
        "functions": 75,
        "lines": 80
      }
    }
  }
}
